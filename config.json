{
  "name": "HausAuto Add-On for HomeAssistant",
  "version": "latest",
  "slug": "hausauto_addon_app",
  "description": "This is a C++ app running in Docker",
  "startup": "application",
  "boot": "auto",
  "image": "sergheislobodeaniuc/hausauto_addon",
  "init":false,
  "arch": ["amd64"],
  "options": {
    "MQTT_IP": "default_value",
    "MQTT_PORT": 1883,
    "MQTT_USERNAME": "none",
    "MQTT_PASSWORD": "none"
  },

  "schema": {
    "MQTT_IP": "str",
    "MQTT_PORT": "int",
    "MQTT_USERNAME": "str",
    "MQTT_PASSWORD": "password",
    "devices": [
      {
        "name": "str",
        "id": "int(1,100)",
        "ip": "match(^\\d{1,3}(\\.\\d{1,3}){3}$)"
      }
    ]
  },

  "environment": {
    "MQTT_IP": "none",
    "MQTT_PORT": "none",
    "MQTT_USERNAME": "none",
    "MQTT_PASSWORD": "none"
  }
}
