{
  "name": "HausAuto Add-On for HomeAssistant",
  "version": "latest",
  "slug": "hausauto_addon_app",
  "description": "This is a C++ app running in Docker",
  "startup": "application",
  "boot": "auto",
  "image": "sergheislobodeaniuc/hausauto_addon",
  "init":false,
  "host_network":true,
  "arch": ["amd64"],
  "options": {
    "mqtt_ip": "default_value",
    "mqtt_port": 1883,
    "mqtt_username": "none",
    "mqtt_password": "none",
    "devices" : [],
    "alarm":""
  },

  "schema": {
    "mqtt_ip": "str",
    "mqtt_port": "int",
    "mqtt_username": "str",
    "mqtt_password": "password",
    "devices": [
      {
        "name": "str",
        "id": "int(1,100)",
        "ip": "match(^\\d{1,3}(\\.\\d{1,3}){3}$)"
      }
    ],
    "alarm":"password"
  },

  "environment": {
    "MQTT_IP": "none",
    "MQTT_PORT": "none",
    "MQTT_USERNAME": "none",
    "MQTT_PASSWORD": "none",
    "MQTT_ALARM": "none"
  }
}
